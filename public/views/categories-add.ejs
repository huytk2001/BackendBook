<%- include('header.ejs') %> <%- include('aside.ejs') %>
<div class="content-wrapper">
  <section class="content-header">
    <h1>Thêm mới danh mục</h1>
  </section>
  <section class="content">
    <div class="box">
      <div class="row">
        <div class="col-md-6" style="padding: 10px; margin-left: 25px">
          <form action="/categories" method="POST" role="form">
            <div class="form-group">
              <label for="categoriesName">Tên danh mục</label>
              <input
                style="outline: none"
                type="text"
                class="form-control"
                id="categoriesName"
                name="categoriesName"
                placeholder="Nhập tên danh mục"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-save"></i> Lưu lại
            </button>
            <a href="/categories" class="btn btn-default pull-right">
              <i class="fa fa-arrow-left"></i> Quay lại</a
            >
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
<%- include("footer.ejs") %>
